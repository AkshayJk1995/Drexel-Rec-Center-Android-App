<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:elevation="4dp"
        android:textAlignment="center"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:title="@string/rc"
        app:logo="@drawable/dragonblue"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:showAsAction="always|withText"
        app:title="@string/rc"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />
    <TextView
        android:id="@+id/rf_intro_tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BUCKLEY COURTS AT THE ARMORY"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textColor="@android:color/holo_orange_light" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/buckleycourts" />
    <TextView
        android:id="@+id/rf_intro_tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buckley Courts Armory 33rd and Cubthbert Streets"
        android:textAlignment="center"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/rf_intro_tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="215-571-3777"
        android:textAlignment="center"
        android:autoLink="phone"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/rf_intro_tv4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recathletics@drexel.edu"
        android:textAlignment="center"
        android:autoLink="email"
        android:textColor="@android:color/black" />
    <TextView
        android:id="@+id/rf_intro_tv5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buckley Courts at the Armory feature three multi-purpose courts with a plexipave surface that allows for recreational tennis, basketball, volleyball, badminton, indoor soccer, street hockey and table tennis. This facility serves as a practice site for club and varsity sports in the winter time.

Buckley Courts at the Armory are on a first-come, first-serve basis. Reservations can be made for Drexel student organizations and campus departments for events.."
        android:textAlignment="center"
        android:textColor="@android:color/white" />


    <Button
        android:id="@+id/button_Armoryhours"
        android:text="@string/Armoryhours"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@android:color/holo_orange_light"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="198dp" />



</LinearLayout>