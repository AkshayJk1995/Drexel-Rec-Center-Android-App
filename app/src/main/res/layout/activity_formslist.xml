<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:elevation="4dp"
        android:textAlignment="center"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:title="@string/intsport"
        app:logo="@drawable/dragonblue"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:showAsAction="always|withText"
        app:title="Club Sports"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/forms"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nCLUB SPORTS OFFICE HOURS"
                android:textColor="@android:color/holo_orange_light"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adam Shanley, Club Sport Coordinator"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monday-Friday: 9 a.m. - 5 p.m. "
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nForms"
                android:textColor="@android:color/holo_orange_light"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The following forms are to be used by all University recognized Club Sports."
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nClub Sports Registration"
                android:id="@+id/test1"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Club Sports Registration Instructions [PDF]"
                android:textColor="@android:color/holo_blue_light"
                android:autoLink="web"
                android:id="@+id/form1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Club Sports Physical [PDF]"
                android:textColor="@android:color/holo_blue_light"
                android:autoLink="web"
                android:id="@+id/form2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nGeneral Forms"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Assumption of Risk Liability Form [PDF]"
                android:textColor="@android:color/holo_blue_light"
                android:autoLink="web"
                android:id="@+id/form3"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Club Sports Manual [PDF]"
                android:textColor="@android:color/holo_blue_light"
                android:autoLink="web"
                android:id="@+id/form4"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Accident/Incident Form [PDF]"
                android:textColor="@android:color/holo_blue_light"
                android:autoLink="web"
                android:id="@+id/form5"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Injury Report [PDF]"
                android:textColor="@android:color/holo_blue_light"
                android:autoLink="web"
                android:id="@+id/form6"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nCompetition Forms"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Travel Safety Guidelines [PDF]"
                android:textColor="@android:color/holo_blue_light"
                android:autoLink="web"
                android:id="@+id/form7"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Game Report [PDF]"
                android:textColor="@android:color/holo_blue_light"
                android:autoLink="web"
                android:id="@+id/form8"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Information for Visiting Teams [PDF]"
                android:textColor="@android:color/holo_blue_light"
                android:autoLink="web"
                android:id="@+id/form9"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nFinancial Forms"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cash Deposit [PDF]"
                android:textColor="@android:color/holo_blue_light"
                android:autoLink="web"
                android:id="@+id/form10"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Form W-9 [PDF]"
                android:textColor="@android:color/holo_blue_light"
                android:autoLink="web"
                android:id="@+id/form11"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Independent Contractor Determination [PDF]"
                android:textColor="@android:color/holo_blue_light"
                android:autoLink="web"
                android:id="@+id/form12"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nCoaching Forms"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Coach Information Sheet [PDF]"
                android:textColor="@android:color/holo_blue_light"
                android:autoLink="web"
                android:id="@+id/form13"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Coach Agreement [PDF]"
                android:textColor="@android:color/holo_blue_light"
                android:autoLink="web"
                android:id="@+id/form14"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Conduct Memo [PDF]"
                android:textColor="@android:color/holo_blue_light"
                android:autoLink="web"
                android:id="@+id/form15"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Non-Employee Associate Form [PDF]"
                android:textColor="@android:color/holo_blue_light"
                android:autoLink="web"
                android:id="@+id/form16"/>

        </LinearLayout>

    </ScrollView>


</LinearLayout>