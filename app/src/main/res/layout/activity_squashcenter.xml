<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:elevation="4dp"
        android:textAlignment="center"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:title="@string/rc"
        app:logo="@drawable/dragonblue"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:showAsAction="always|withText"
        app:title="@string/rc"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/rf_intro_tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KLINE AND SPECTER SQUASH CENTER"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="30dp"
        android:textStyle="bold"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/squash" />
    <TextView
        android:id="@+id/rf_intro_tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recreation Center 33rd and Market Streets"
        android:textAlignment="center"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/rf_intro_tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="215-571-3777"
        android:textAlignment="center"
        android:autoLink="phone"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/rf_intro_tv4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recathletics@drexel.edu"
        android:textAlignment="center"
        android:autoLink="email"
        android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/rf_intro_tv5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Kline and Specter Squash Center has 7 courts in total - 2 in the Recreation Center and 5 in the Daskalakis Athletic Center. All 7 courts are available for open recreational play when not utilized by the Drexel University Squash team."
            android:textAlignment="center"
            android:textColor="@android:color/white" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_orange_light"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="\nPolicies"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginStart="20dp"
            android:text="-Squash shoes must be worn at all times\n-Squash shoes are available for purchase at the Dragon Shop in the Recreation Center lobby\n-Squash is the only sport/activity permitted in squash courts\n-Protective eyewear is required\n-Be courteous and do not monopolize courts. Please limit play to 1 hour when others are waiting to play\n-No food or drink permitted in the courts"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_orange_light"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="\nReservation Policy"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginStart="20dp"
            android:text="-Reservations can be made beginning at 8am Monday-Saturday; 10am on Sunday.\n-Reservations can be made up to 7 days in advance but no later than 24 hours leading up to requested time.\n-Reservations can be made by calling 215-571-3777 or in person at the Rec Center front desk.\n-Court reservations can only be made for 1 hour at a time.\n-A court reservation is considered lost if one does not show up within ten (10) minutes of reserved time." />

    </LinearLayout>
</ScrollView>
</LinearLayout>