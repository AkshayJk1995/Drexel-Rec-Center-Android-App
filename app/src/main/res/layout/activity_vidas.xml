<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:elevation="4dp"
        android:textAlignment="center"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:title="@string/rc"
        app:logo="@drawable/dragonblue"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:showAsAction="always|withText"
        app:title="@string/rc"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/rf_intro_tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VIDAS ATHLETIC COMPLEX"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_light"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/vidas" />

    <TextView
        android:id="@+id/rf_intro_tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vida Athletic Complex 43rd Street and Powelton Avenue"
        android:textAlignment="center"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/rf_intro_tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="215-571-3777"
        android:textAlignment="center"
        android:autoLink="phone"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/rf_intro_tv4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recathletics@drexel.edu"
        android:textAlignment="center"
        android:autoLink="email"
        android:textColor="@android:color/white" />
    <TextView
        android:id="@+id/rf_intro_tv5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:text="\nThe Vidas Athletic Complex is the home of outdoor varsity athletics at Drexel University. The complex features nine varsity regulation Tennis Courts, a Softball Field and three fields - Maguire Field, a Sprinturf synthetic grass field; Vidas Field, a Shaw synthetic grass field with lights and seating for full-size soccer and lacrosse events; and Buckley Field, an Astroturf field with lights and seating for field hockey. Both lighted fields support night sporting events at the complex."/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_orange_light"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="\nVidas Athletic Complex Hours"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:text="Limited hours due to varsity, club, and intramural sports schedules.Reservations can be made for Drexel student organizations and campus departments for events." />

</LinearLayout>